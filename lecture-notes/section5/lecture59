pragma solidity >=0.8.2 <0.9.0;

contract Wallet{

    PaymentRecived public payment; //new contract created here

    address sender;
    uint valueSent;

    function payContract() public payable {
        payment=new PaymentRecived(msg.sender, msg.value);
    }
}

contract PaymentRecived {
    address public from;
    uint public amount;

    constructor(address _from, uint _amount){
        from=_from;
        amount=_amount;
    }
}

-> You Basically Deploy Wallet, and it creates a new smart contract
